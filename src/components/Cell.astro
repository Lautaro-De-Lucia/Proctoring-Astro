---
// Props: value (expecting "SUCCESS" or "FAIL")
const { value, test, studentEmail, examName } = Astro.props;
const isSuccess = value.includes('SUCCESS');
const isFail = value.includes('FAIL');
// Define the URL to redirect to when the cell is clicked
const redirectUrl = `${examName}/${studentEmail}/${test}/`;
---

<td class={isSuccess ? 'success' : isFail ? 'fail' : ''}
    onclick=`window.location.href='${redirectUrl}'`
    role="button"
    tabindex="0">
  <!-- Cell content (empty for SUCCESS/FAIL, student email otherwise) -->
  {isSuccess || isFail ? '' : value}
</td>

<style>

td {
  padding: 8px;
  text-align: center;
  transition: background-color 0.2s, transform 0.2s, box-shadow 0.2s;
  cursor: pointer; /* Change cursor to indicate the cell is clickable */
  font-weight: bold; /* Make text bold */
}

.success:hover, .fail:hover {
  transform: scale(1.1);
  box-shadow: 0 0 10px white; /* Halo effect on hover */
}

.success {
  background-color: #28a745; /* Green for success */
}

.fail {
  background-color: #dc3545; /* Red for fail */
}


</style>